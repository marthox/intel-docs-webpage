{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@components/*": ["src/components/*"],
            "@content/*": ["src/content/*"],
            "@assets/*": ["src/assets/*"],
            "@styles/*": ["src/styles/*"],
            "@utils/*": ["src/utils/*"],
            "@i18n/*": ["src/i18n/*"]
        }
    }
}
