---
import "@styles/reset.css";

import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";

import { getPageColors } from "@utils/contentful_utils";

const vars = await getPageColors();

interface Props {
    title: string;
    lang: string;
    page_id: string;
}

const { title, lang, page_id } = Astro.props;
---

<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body id={page_id}>
        <Navbar />
        <div class="page-container">
            <slot />
        </div>
        <Footer />
    </body>
</html>
<style is:global define:vars={vars}>
    /* Classes */
    .page-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: white;
        width: 100%;
        max-width: 1240px;
        gap: 10px;
        margin-bottom: 40px;
    }
    /* Elements */
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100vw;
        background-color: var(--secondaryColorOne);
        font-family: "NUE Helvetica", Arial, Helvetica, sans-serif;
        font-weight: normal;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
    h1 {
        font-size: 3rem;
        font-family: "Nomo Sans", Arial, Helvetica, sans-serif;
        color: var(--primaryColorOne);
    }
    h2 {
        color: var(--primaryColorOne);
        font-size: 2.25rem;
        font-family: "Nomo Sans", Arial, Helvetica, sans-serif;
    }
    h3 {
        font-size: 1.6rem;
        color: var(--primaryColorOne);
        font-family: "Nomo Sans", Arial, Helvetica, sans-serif;
    }
    p {
        line-height: 1.6;
        font-size: 16.8px;
        color: #1c1c1b;
        font-family: "NUE Helvetica", Arial, Helvetica, sans-serif;
        font-weight: normal;
    }
    a,
    span {
        font-family: "NUE Helvetica", Arial, Helvetica, sans-serif;
        font-weight: normal;
    }
    @media (max-width: 768px) {
        .page-container {
            margin: 0 10px;
        }
        body {
            margin: 0 10px;
        }
    }
</style>
